<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/caculadora_gradient"
    android:shrinkColumns="0"
    android:weightSum="10">

    <TableRow
        android:layout_weight="6">
        <TextView
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:layout_weight="1"
            android:id="@+id/text"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:textAlignment="textEnd"/>
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="0.5dp" />

    <!-- Segona fila: 7,8,9 -->
    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/num7"
            android:layout_weight="1"
            android:text="7"
            style="@style/BotonsLand"/>/>
        <Button
            android:id="@+id/num8"
            android:layout_weight="1"
            android:text="8"
            style="@style/BotonsLand"/>/>

        <Button
            android:id="@+id/num9"
            android:layout_weight="1"
            android:text="9"
            style="@style/BotonsLand"/>/>

        <Button
            android:id="@+id/divide"
            android:layout_weight="1"
            android:text="@string/divide"
            style="@style/BotonsLand"/>/>
        <Button
            android:id="@+id/delete"
            android:layout_weight="1"
            android:text="DEL"
            style="@style/BotonsLand"/>/>
    </TableRow>

    <!-- Tercera fila: 4,5,6 -->
    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/num4"
            android:layout_weight="1"
            android:text="4"
            style="@style/BotonsLand"/>/>
        <Button
            android:id="@+id/num5"
            android:layout_weight="1"
            android:text="5"
            style="@style/BotonsLand"/>/>
        <Button
            android:id="@+id/num6"
            android:layout_weight="1"
            android:text="6"
            style="@style/BotonsLand"/>/>
        <Button
            android:id="@+id/multiply"
            android:layout_weight="1"
            android:text="@string/multiply"
            style="@style/BotonsLand"/>/>
        <Button
            android:id="@+id/ac"
            android:layout_weight="1"
            android:text="AC"
            style="@style/BotonsLand"/>
    </TableRow>

    <!-- Quarta fila: 1,2,3 -->
    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/num1"
            android:layout_weight="1"
            android:text="1"
            style="@style/BotonsLand"/>/>
        <Button
            android:id="@+id/num2"
            android:layout_weight="1"
            android:text="2"
            style="@style/BotonsLand"/>/>
        <Button
            android:id="@+id/num3"
            android:layout_weight="1"
            android:text="3"
            style="@style/BotonsLand"/>/>
        <Button
            android:id="@+id/substract"
            android:layout_weight="1"
            android:text="-"
            style="@style/BotonsLand"/>/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_weight="1">
        </Button>

    </TableRow>

    <!-- Cinquena fila: ",", 0, "=" -->
    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/comma"
            android:layout_weight="1"
            android:text=","
            style="@style/BotonsLand"/>/>
        <Button
            android:id="@+id/num0"
            android:layout_weight="1"
            android:text="0"
            style="@style/BotonsLand"/>/>
        <Button
            android:id="@+id/equals"
            android:layout_weight="1"
            android:text="="
            style="@style/BotonsLand"/>/>
        <Button
            android:id="@+id/plus"
            android:layout_weight="1"
            android:text="+"
            style="@style/BotonsLand"/>/>
        <Button
            android:id="@+id/parentesis"
            android:layout_weight="1"
            android:text="( )"
            style="@style/BotonsLand"/>/>
    </TableRow>

</TableLayout>