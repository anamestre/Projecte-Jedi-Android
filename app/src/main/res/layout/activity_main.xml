<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/caculadora_gradient">

    <TableRow
        android:layout_weight="5">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="0.5dp" />
    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/delete"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="7"
            android:text="DEL"
            />

        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="7"
            android:text="AC"/>

        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="( ) "/>
    </TableRow>



    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/num1"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="7"/>
        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="8"/>

        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="9"/>

        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="รท"/>
    </TableRow>


    <TableRow
        android:layout_weight="1">
        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="4"/>
        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="5"/>
        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="6"/>
        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="ร"/>
    </TableRow>


    <TableRow
        android:layout_weight="1">
        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="1"/>
        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="2"/>
        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="3"/>
        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="-"/>
    </TableRow>

    <TableRow
        android:layout_weight="1">
        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text=","/>
        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="0"/>
        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="="/>
        <Button
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="+"/>
    </TableRow>



</TableLayout>