<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:weightSum="7">

    <TextView
        android:background="@android:color/white"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:layout_weight="3"
        android:id="@+id/text"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:gravity="bottom"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@android:color/white"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/colorSecondary"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/caculadora_gradient"
    android:shrinkColumns="0"
    android:layout_weight="1">

    <!-- Primera fila -->
    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/delete"
            android:layout_weight="1"
            android:text="DEL"
            style="@style/Botons"/>/>

        <Button
            android:id="@+id/ac"
            android:layout_weight="1"
            android:text="AC"
            style="@style/Botons"/>
        <Button
            android:id="@+id/lparen"
            android:layout_weight="1"
            android:text="("
            style="@style/Botons"/>/>
        <Button
            android:id="@+id/rparen"
            android:layout_weight="1"
            android:text=")"
            style="@style/Botons"/>/>
    </TableRow>


    <!-- Segona fila: 7,8,9 -->
    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/num7"
            android:layout_weight="1"
            android:text="7"
            style="@style/Botons"/>/>
        <Button
            android:id="@+id/num8"
            android:layout_weight="1"
            android:text="8"
            style="@style/Botons"/>/>

        <Button
            android:id="@+id/num9"
            android:layout_weight="1"
            android:text="9"
            style="@style/Botons"/>/>

        <Button
            android:id="@+id/divide"
            android:layout_weight="1"
            android:text="@string/divide"
            style="@style/Botons"/>/>
    </TableRow>

    <!-- Tercera fila: 4,5,6 -->
    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/num4"
            android:layout_weight="1"
            android:text="4"
            style="@style/Botons"/>/>
        <Button
            android:id="@+id/num5"
            android:layout_weight="1"
            android:text="5"
            style="@style/Botons"/>/>
        <Button
            android:id="@+id/num6"
            android:layout_weight="1"
            android:text="6"
            style="@style/Botons"/>/>
        <Button
            android:id="@+id/multiply"
            android:layout_weight="1"
            android:text="@string/multiply"
            style="@style/Botons"/>/>
    </TableRow>

    <!-- Quarta fila: 1,2,3 -->
    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/num1"
            android:layout_weight="1"
            android:text="1"
            style="@style/Botons"/>/>
        <Button
            android:id="@+id/num2"
            android:layout_weight="1"
            android:text="2"
            style="@style/Botons"/>/>
        <Button
            android:id="@+id/num3"
            android:layout_weight="1"
            android:text="3"
            style="@style/Botons"/>/>
        <Button
            android:id="@+id/substract"
            android:layout_weight="1"
            android:text="-"
            style="@style/Botons"/>/>
    </TableRow>

    <!-- Cinquena fila: ",", 0, "=" -->
    <TableRow
        android:layout_weight="1">
        <Button
            android:id="@+id/comma"
            android:layout_weight="1"
            android:text=","
            style="@style/Botons"/>/>
        <Button
            android:id="@+id/num0"
            android:layout_weight="1"
            android:text="0"
            style="@style/Botons"/>/>
        <Button
            android:id="@+id/equals"
            android:layout_weight="1"
            android:text="="
            style="@style/Botons"/>/>
        <Button
            android:id="@+id/plus"
            android:layout_weight="1"
            android:text="+"
            style="@style/Botons"/>/>
    </TableRow>

</TableLayout>

</LinearLayout>